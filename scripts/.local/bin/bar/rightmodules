Dat() {
	DATE=$(date "+%d/%m/%y")
	TIME=$(date "+%H:%M:%S")
	Format "%{A:emacs -f mu4e:}${DATE} ${TIME}%{A}"
}

Cpu() {
	usage=$(mpstat | sed '1,3d;s/.* //')
	free="$(calc 100 - $usage)"
	Format "$free"
}

Mem() {
	echo "%{A:$TERMINAL -e htop:}$(Format "$(memory)")%{A}"
}

Bat() {
	Format "$(battery)"
}

Main() {
	echo -e "%{r} $(Cpu) $(Mem) $(Bat) $(Dat)"
}

while true; do
	Main
	sleep 5s &
	wait
done
